<style>
  .hero-section {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    position: relative;
    margin: 0;
    padding: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    transition: filter 1s ease;
  }

  /* Fondo difuminado */
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(10px);
    background: rgba(0, 0, 0, 0.45);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    z-index: 50;
  }

  .overlay-content {
    text-align: center;
    color: white;
    animation: fadeIn 1.5s ease-in-out;
  }

  .play-button {
    background-color: white;
    border: none;
    border-radius: 50%;
    font-size: 3rem;
    padding: 20px;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .play-button:hover {
    transform: scale(1.1);
  }

  .text {
    margin-top: 15px;
    font-size: 1.2rem;
    font-weight: 500;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .hidden {
    display: none !important;
  }
</style>

<script>
  const overlay = document.getElementById('overlay');
  const playButton = document.getElementById('playButton');
  const music = document.getElementById('backgroundMusic');
  const mainContent = document.getElementById('mainContent');

  playButton.addEventListener('click', async () => {
    try {
      await music.play(); // inicia m√∫sica
      overlay.classList.add('hidden'); // quita pantalla inicial
      mainContent.classList.remove('hidden'); // muestra la invitaci√≥n
    } catch (error) {
      console.log('Error al reproducir m√∫sica:', error);
    }
  });
</script>
